@using FashionShopAdmin.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}


<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
