
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />*@
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<style>
    .btn span.glyphicon {
        opacity: 0;
    }

    .btn.active span.glyphicon {
        opacity: 1;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>Product</h2>
            <button class="btn btn-default" data-target="#addProductModal" data-toggle="modal" style="margin-bottom:10px">
                <i class="fa fa-plus"></i>
                Add new product
            </button>
            @* ------------------PRODUCT DATATABLE---------------- *@
            <table id="productTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        @*<th>ID</th>*@
                        <th>Name</th>
                        <th>Size</th>
                        <th>Color</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Supplier</th>
                        <th>Price</th>
                        @*<th>Parent Product</th>
                            <th>Active</th>*@
                    </tr>
                </thead>
            </table>

            @* ------ADD NEW PRODUCT MODAL---------- *@
            <div class="modal" id="addProductModal" tabindex="-1">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add new product</h4>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control" type="text" id="name" />
                                </div>
                                <div class="form-group">
                                    <label>Size</label><br />
                                    <div class="checkbox-inline">
                                        <input type="checkbox" id="sizeX" name="size" />
                                        <label>X</label>
                                    </div>
                                    <div class="checkbox-inline">
                                        <input type="checkbox" id="sizeM" name="size" />
                                        <label>M</label>
                                    </div>
                                    <div class="checkbox-inline">
                                        <input type="checkbox" id="sizeL" name="size" />
                                        <label>L</label>
                                    </div>
                                    <div class="checkbox-inline">
                                        <input type="checkbox" id="sizeXL" name="size" />
                                        <label>XL</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Color</label><br />
                                    <div class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-success">
                                            <input type="checkbox" id="green" name="color" autocomplete="off">
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </label>
                                        <label class="btn btn-primary">
                                            <input type="checkbox" id="blue" name="color" autocomplete="off">
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </label>
                                        <label class="btn btn-default">
                                            <input type="checkbox" id="white" name="color" autocomplete="off">
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </label>
                                        <label class="btn btn-warning">
                                            <input type="checkbox" id="orange" name="color" autocomplete="off">
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </label>
                                        <label class="btn btn-danger">
                                            <input type="checkbox" id="red" name="color" autocomplete="off">
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <input class="form-control" type="text" id="description" />
                                </div>
                                <div class="form-group">
                                    <label>Category</label><br />
                                    <select id="category" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <label>Supplier</label><br/>
                                    <select id="supplier" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <label>Price</label>
                                    <input class="form-control" type="text" id="price" />
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary">Add</button>
                            <button class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            InitDataTable();
            getAllCategories();
            getAllSuppliers();

            function InitDataTable() {
                $.ajax({
                    url: "@Url.Action("GetAllProducts", "Product")",
                    method: "get",
                    dataType: "json",
                    success: function (data) {
                        $("#productTable").dataTable({
                            data: data.data,
                            columns: [
                                //{ data: 'ID' },
                                { data: "Name" },
                                { data: "Size" },
                                { data: "Color" },
                                { data: "Description" },
                                { data: "ProductCategory.Name" },
                                { data: "Supplier.Name" },
                                { data: "Price" },
                                //{ data: "ParentProductId" },
                                //{ data: "Active" }
                            ],
                        });
                    }
                });
            }

            function getAllCategories() {
                $.ajax({
                    url: "@Url.Action("GetAllCategories", "Category")",
                    method: "get",
                    dataType: "json",
                    success: function (data) {
                        var length = data.length;
                        for (var i = 0; i < length; i++) {
                            $("#category").append('<option value="' + data[i].ID + '">' + data[i].Name + '</option>');
                        }
                    }
                });
            }

            function getAllSuppliers() {
                $.ajax({
                    url: "@Url.Action("GetAllSupplier", "Supplier")",
                    method: "get",
                    dataType: "json",
                    success: function (data) {
                        var length = data.length;
                        for (var i = 0; i < length; i++) {
                            $("#supplier").append('<option value="' + data[i].ID + '">' + data[i].Name + '</option>');
                        }
                    }
                });
            }
        });
    </script>
}